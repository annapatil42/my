  <h1>Admin > Users</h1>
  {{> flash}}
  <a href="/admin/users/new">New user</a>
  <table class="table table-striped table-admin"> 
    <thead> 
      <tr>
        <th>#</th> 
        <th>Avatar</th> 
        <th>Email</th> 
        <th>Joined</th> 
        <th>Edit</th>
        <th>Delete</th>
      </tr> 
    </thead> 
    <tbody> 
      {{#each users}}
        <tr> 
          <th scope="row">{{@index}}</th> 
          <td><img width="40" height="40" src="{{this.avatar}}"></td> 
          <td>{{this.email}}</td> 
          <td>{{formatDate this.joinedAt}}</td> 
          <td>
            <a href="/admin/users/{{this.id}}/edit" title="Edit user {{user.email}}">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
          </td>
          <td>
            <form method="post" action="/admin/users/{{this.id}}/destroy" style="margin-bottom: 0;">
              <button class="destroy"> 
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              </button>
            </form>
          </td> 
        </tr>
      {{/each}}
    </tbody>
  </table>