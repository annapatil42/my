  <h1>Edit user {{user.email}}</h1>
  {{> flash}}
  <form method="post" action="/admin/users/{{user.id}}">
    <div class="form-group">
      <label for="email">Email</label>
      <input name="email" type="email" class="form-control" id="email" value="{{user.email}}">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input name="password" type="password" class="form-control" id="password" value="{{user.password}}">
    </div>
    <div class="form-group">
      <label for="password">Role</label>
      <select name="role" class="form-control">
        <option {{isSelected user.role 'member'}} value="member">Member</option>
        <option {{isSelected user.role 'admin'}} value="admin">Admin</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>